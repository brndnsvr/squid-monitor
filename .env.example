# Squid Monitor Docker Configuration
# Copy this file to .env and update with your actual values

# SMTP Configuration (REQUIRED - update these!)
SMTP_SERVER=smtp.example.com
SMTP_PORT=25
SMTP_USE_TLS=false
SMTP_FROM=squid-monitor@example.com
SMTP_TO=admin@example.com

# Optional SMTP Authentication
#SMTP_USERNAME=
#SMTP_PASSWORD=

# Service Configuration
SERVICE_NAME=squid
CHECK_INTERVAL=300
ALERT_COOLDOWN=3600

# Logging
LOG_LEVEL=INFO
ENABLE_SYSLOG=false  # Must be false for Docker

# Testing
DRY_RUN=true  # Set to false when ready for production

# File Paths (don't change for Docker)
STATE_FILE=/var/lib/squid-monitor/state.json
LOG_FILE=/var/log/squid-monitor/monitor.log